<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.yancharkin.SpelunkyClassicHDhtml5" version="1.1.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spelunky Classic HD HTML5</name>
    <description>
        Platform video game. HTML5 version.
    </description>
    <author email="yancharkin@gmail.com" href="https://github.com/yancharkin">
        Ivan Yancharkin
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="landscape" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android-icons/icon-36-ldpi.png" />
        <icon density="mdpi" src="resources/android-icons/icon-48-mdpi.png" />
        <icon density="hdpi" src="resources/android-icons/icon-72-hdpi.png" />
        <icon density="xhdpi" src="resources/android-icons/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
